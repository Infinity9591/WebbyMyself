@model WebbyMyself.Models.StudentManage

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/site.css"> 
<link rel="script" href="~/js/site.js">
<script src="~/lib/font-awesome/js/all.js"></script>
<link href="~/lib/font-awesome/css/all.css"/>

<h1 class="title">Xóa sinh viên</h1>
<hr />
<h3>Bạn có muốn xóa không?</h3>
<p>
    <div>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                    Tên
            </dt>
            <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class = "col-sm-2">
                    Điện thoại
            </dt>
            <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Phone)
            </dd>
            <dt class = "col-sm-2">
                    Email
            </dt>
            <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class = "col-sm-2">
                    Địa chỉ
            </dt>
            <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class = "col-sm-2">
                    Lớp
            </dt>
            <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.ClassName)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <button type="submit" title="Lưu" class="btn btn-danger my-3"><i class="fa fa-trash"></i> Xóa</button>
            <a class="btn btn-secondary" asp-action="Index">Trở về trang chủ</a>
        </form>
    </div>
</p>

