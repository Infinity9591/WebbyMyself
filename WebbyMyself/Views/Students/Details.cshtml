@model WebbyMyself.Models.Student

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/site.css"> 
<link rel="script" href="~/js/site.js">
<script src="~/lib/font-awesome/js/all.js"></script>
<link href="~/lib/font-awesome/css/all.css"/>

<h1 class="title">Thông tin sinh viên</h1>
<br />
<p>
    <div>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                    Tên
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class = "col-sm-2">
                    Diện thoại
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Phone)
            </dd>
            <dt class = "col-sm-2">
                    Email
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class = "col-sm-2">
                    Địa chỉ
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class = "col-sm-2">
                    Mã lớp
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ClassID)
            </dd>
        </dl>
    </div>
    <div>
        <a class="btn btn-secondary" asp-action="Index">Trở về trang chủ</a> 
    </div>
</p>

