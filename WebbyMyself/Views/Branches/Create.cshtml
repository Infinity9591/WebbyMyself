@model WebbyMyself.Models.Branch

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Branch</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" placeholder="branch's id'" required class="form-control" />

				<div class="branchInputsection my-3">
                    <label asp-for="BranchName" class="control-label">Branch Name</label>
                    <input asp-for="BranchName" placeholder="branch's name" required class="form-control" />
                </div>

                <span asp-validation-for="BranchName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary my-3" />
            </div>

        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

