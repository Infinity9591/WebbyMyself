@model WebbyMyself.Models.Branch

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/site.css"> 
<link rel="script" href="~/js/site.js">
<script src="~/lib/font-awesome/js/all.js"></script>
<link href="~/lib/font-awesome/css/all.css"/>

<h1 class="title">Thêm khoa/ngành</h1>
<hr />
<p>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ID" class="control-label"></label>
                    <input asp-for="ID" required class="form-control" type="text"/>

                    <div class="branchInputsection my-3">
                        <label asp-for="BranchName" class="control-label">Tên ngành</label>
                        <input asp-for="BranchName" required class="form-control" />
                    </div>

                    <span asp-validation-for="BranchName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Lưu</button>
                    <a class="btn btn-secondary" asp-action="Index">Trở về trang chủ</a>
                </div>
            </form>
        </div>
    </div>
</p>



