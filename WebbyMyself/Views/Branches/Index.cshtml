@model IEnumerable<WebbyMyself.Models.Branch>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="./css/site.css"> 
<link rel="script" href="./js/site.js">
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<h1>Thông tin Branch</h1>

<p>
    <a class="btn btn-primary my-4" asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BranchName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="align-middle">
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BranchName)
            </td>
            <td>
				<div class="span3">
                    <a class="btn btn-secondary " asp-action="Edit" asp-route-id="@item.ID">Edit</a> 
                        <a class="btn btn-secondary mx-2 " asp-action="Details" asp-route-id="@item.ID">Details</a> 
                        <a class="btn btn-secondary " asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    @*<a class="delete-link" href="@Url.Action("Delete", new { id = item.ID })" data-toggle="modal"><span style="color: red">Xóa</span></a>*@
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

